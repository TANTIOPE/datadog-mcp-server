{
  "name": "datadog-mcp",
  "version": "1.0.0",
  "description": "MCP server for Datadog API - monitors, logs, metrics, traces, dashboards and more",
  "mcpName": "io.github.tantiope/datadog-mcp-server",
  "type": "module",
  "bin": {
    "datadog-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "datadog",
    "monitoring",
    "observability",
    "logs",
    "metrics",
    "apm",
    "traces",
    "ai",
    "llm"
  ],
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TANTIOPE/datadog-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/TANTIOPE/datadog-mcp-server/issues"
  },
  "homepage": "https://github.com/TANTIOPE/datadog-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@datadog/datadog-api-client": "^1.34.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "express": "^5.2.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "msw": "^2.7.0",
    "prettier": "^3.7.4",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.0",
    "vitest": "^2.1.8"
  }
}
