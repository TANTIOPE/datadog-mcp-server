{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.TANTIOPE/datadog-mcp",
  "description": "Full Datadog API access: monitors, logs, metrics, traces, dashboards, and observability tools",
  "repository": {
    "url": "https://github.com/tantiope/datadog-mcp-server",
    "source": "github"
  },
  "version": "1.0.9",
  "packages": [
    {
      "registryType": "npm",
      "registryBaseUrl": "https://registry.npmjs.org",
      "identifier": "datadog-mcp",
      "version": "1.0.9",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "DD_API_KEY",
          "description": "Datadog API key",
          "isRequired": true,
          "format": "string",
          "isSecret": true
        },
        {
          "name": "DD_APP_KEY",
          "description": "Datadog Application key",
          "isRequired": true,
          "format": "string",
          "isSecret": true
        },
        {
          "name": "DD_SITE",
          "description": "Datadog site (e.g., datadoghq.com, datadoghq.eu, us3.datadoghq.com)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        }
      ]
    }
  ]
}
